<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom DineOn Application theme. -->
    <style name="DineOnLoginBackground" parent="android:Theme.Holo.Light">
        <item name="android:background">#b10202</item>
    </style>

    <style name="DineOnLoginForm" parent="android:Theme.Holo.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fedbb5</item>
        <item name="android:textColorHint">#fedbb5</item>
        <item name="android:ems">12</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DineOnLoginButton" parent="android:Theme.Holo.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DineOnLoginLinear" parent="android:Theme.Holo.Light">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>