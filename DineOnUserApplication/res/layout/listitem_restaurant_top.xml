<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restaurant_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_restaurant_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType='centerCrop'
            android:src="@drawable/restaurant_photo_placeholder" />

        <TextView
            android:id="@+id/label_restaurant_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_alignBottom="@+id/image_restaurant_thumbnail"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button_expand_down"
            android:layout_toRightOf="@+id/image_restaurant_thumbnail"
            android:gravity="center_vertical"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/button_expand_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_restaurant_thumbnail"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/navigation_expand" />

</RelativeLayout>