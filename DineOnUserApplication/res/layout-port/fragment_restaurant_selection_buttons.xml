    <ImageButton
        android:id="@+id/button_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/label_nearby"
        android:src="@drawable/checkin" />

    <View
        android:id="@+id/checkinline"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />

    <ImageButton
        android:id="@+id/button_nearby_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/label_nearby"
        android:src="@drawable/nearby" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />

    <ImageButton
        android:id="@+id/button_friends_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/label_friends_favorites"
        android:src="@drawable/friendsfavorites" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />

    <ImageButton
        android:id="@+id/button_user_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/label_my_favorites"
        android:src="@drawable/myfavorites" />
