<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/image_thumbnail_menuitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_search_category_default" />

    <TextView
        android:id="@+id/label_menuitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_thumbnail_menuitem"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_send_shout_out"
        android:layout_toRightOf="@+id/image_thumbnail_menuitem"
        android:gravity="center"
        android:text="@string/hint_menuitem_title"
        android:textAppearance="?android:attr/textAppearanceMedium" >

    </TextView>

    <TextView
        android:id="@+id/label_menuitem_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/image_thumbnail_menuitem"
        android:ems="10"
        android:text="@string/hint_description" />

    <TextView
        android:id="@+id/label_menuitem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_menuitem_desc"
        android:ems="10"
        android:text="@string/hint_price" />

    <ImageButton
        android:id="@+id/button_menuitem_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/label_menuitem_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/discard_content" />

</RelativeLayout>