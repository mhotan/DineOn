<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DineOnLoginBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_selector" >

    <LinearLayout
        style="@style/DineOnLoginLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dine_on_rest_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/dineonlogo"
            android:src="@drawable/dineonrestlogo" />

        <EditText
            android:id="@+id/input_restaurant_login_name"
            style="@style/DineOnLoginForm"
            android:layout_marginBottom="30dp"
            android:hint="@string/hint_restaurant_name" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/input_password"
            style="@style/DineOnLoginForm"
            android:layout_marginBottom="30dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_login"
            style="@style/DineOnLoginButton"
            android:background="@drawable/login" />

        <View
            android:layout_width="250dp"
            android:layout_height="1dip"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="#fedbb5" />

        <Button
            android:id="@+id/button_create_account"
            style="@style/DineOnLoginForm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/option_create_new_account"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/button_forgot_password"
            style="@style/DineOnLoginForm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/option_forgot_password"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/husky_soft_logo"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/husky_soft_logo"
            android:src="@drawable/husky_soft_logo" />
    </LinearLayout>

</ScrollView>