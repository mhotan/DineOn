<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_order_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_order_thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/label_menu_item_thumbnail"
        android:src="@drawable/placeholdermenuitem" />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/label_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:text="@string/label_order_default"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/label_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_time_default"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <ImageView
        android:id="@+id/button_expand_order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/button_accordion"
        android:gravity="right|center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:src="@drawable/navigation_expand" />

</LinearLayout>