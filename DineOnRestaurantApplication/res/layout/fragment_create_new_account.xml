<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_new_rest_account"
    style="@style/DineOnLoginBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_selector" >

    <LinearLayout
        style="@style/DineOnLoginLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dine_on_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/dineonlogo"
            android:src="@drawable/dineonrestlogo" />

        <EditText
            android:id="@+id/input_createnewaccount_username"
            style="@style/DineOnLoginForm"
            android:layout_marginBottom="14dp"
            android:hint="@string/hint_restaurant_name"
            android:inputType="textEmailAddress" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/input_createnewaccount_email"
            style="@style/DineOnLoginForm"
            android:layout_marginBottom="15dp"
            android:hint="@string/hint_email_address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/input_createnewaccount_password"
            style="@style/DineOnLoginForm"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/input_createnewaccount_repeat_password"
            style="@style/DineOnLoginForm"
            android:layout_marginTop="18dp"
            android:hint="@string/hint_password_repeat"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/label_credit_card_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/credit_card_header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fedbb5" />

        <EditText
            android:id="@+id/input_credit_card_number"
            style="@style/DineOnLoginForm"
            android:layout_marginTop="16dp"
            android:hint="@string/credit_card_number"
            android:inputType="number" />

        <EditText
            android:id="@+id/input_security_code"
            style="@style/DineOnLoginForm"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/security_code"
            android:inputType="number" />

        <EditText
            android:id="@+id/input_expiration_month"
            style="@style/DineOnLoginForm"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="@string/expiration_month"
            android:inputType="number" />

        <EditText
            android:id="@+id/input_expiration_year"
            style="@style/DineOnLoginForm"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="@string/expiration_year"
            android:inputType="number" />

        <EditText
            android:id="@+id/input_zip_code"
            style="@style/DineOnLoginForm"
            android:layout_marginTop="18dp"
            android:hint="@string/zip_code"
            android:inputType="number" />

        <TextView
            android:id="@+id/label_payment"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/disclaimer"
            android:textColor="#fedbb5"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_create_account"
            style="@style/DineOnLoginButton"
            android:layout_marginTop="20dp"
            android:background="@drawable/createnewrest" />

        <ImageView
            android:id="@+id/husky_soft_logo"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/husky_soft_logo"
            android:src="@drawable/husky_soft_logo" />
    </LinearLayout>

</ScrollView>